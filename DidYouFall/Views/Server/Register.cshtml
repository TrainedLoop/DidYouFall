@using DidYouFall.Models.Forms;
@model RegisterServer
@using Recaptcha.Web.Mvc;
@{
    RegisterServer toRegister = Model ?? new RegisterServer();
}

<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Cadastro de Hosts
        </div>
        <div class="panel-body">
            <div class="row"></div>
            <div class="col-lg-12">
                @using (Html.BeginForm("Register", "User", FormMethod.Post))
                {
                    if (Model != null)
                    {
                        <div class="alert alert-dismissable alert-danger">
                            @toRegister.Error
                        </div>
                    }
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" value="@toRegister.Server.Name" max="40" name="name" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Host</label>
                        <input type="text" value="@toRegister.Server.Host" id="date" required class="form-control date">
                    </div>
                    <div class="form-group">
                        <label>Email para contato</label>
                        <input value="@toRegister.Server.Contactemail" type="email" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Tempo de verificação</label>
                        <input value="@toRegister.Server.Verificationtime" required class="form-control">
                    </div>
                    <input type="submit" value="Confirmar" style="float:right" class="btn btn-success" />
                }
            </div>
        </div>
    </div>
</div>
