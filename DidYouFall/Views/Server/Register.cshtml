@using DidYouFall.Models.Forms;
@model RegisterServer
@using Recaptcha.Web.Mvc;
@{
    RegisterServer toRegister = Model ?? new RegisterServer();
}
@section Plugins
{
    @System.Web.Optimization.Scripts.Render("/bundles/Js/Plugins/IpMask")
}

<div class="col-lg-6">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">
                Cadastro de Hosts
            </h3>
        </div>
        @using (Html.BeginForm("Register", "Server", FormMethod.Post))
        {
            <div class="box-body">

                @if (Model != null)
                {
                    <div class="callout callout-danger">
                        <i class="fa fa-ban"></i>
                        <b>Erro! </b>@toRegister.Error
                    </div>
                }
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" value="@toRegister.Server.Name" max="40" name="name" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Host</label>
                    <input type="text" value="@toRegister.Server.Host" placeholder="255.255.255.255" id="ip_address" required class="form-control date">
                </div>
                <div class="form-group">
                    <label>Email para contato</label>
                    <input value="@toRegister.Server.Contactemail" type="email" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Tempo de verificação</label>
                    <input value="@toRegister.Server.Verificationtime" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Confirmação</label>
                    @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.White)
                </div>
            </div>
            <div class="box-footer" style="padding-left:75%">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
