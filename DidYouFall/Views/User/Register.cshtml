@using DidYouFall.Models.Forms;
@model RegisterUser
@using Recaptcha.Web.Mvc;
@{
    RegisterUser toRegister = Model ?? new RegisterUser();
}


<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            Cadastro de Usuário
        </div>
        <div class="panel-body">
            <div class="row"></div>
            <div class="col-lg-12">
                @using (Html.BeginForm("Register", "User", FormMethod.Post))
                {
                    if (Model != null)
                    {
                        <div class="alert alert-dismissable alert-danger">
                            @toRegister.Error
                        </div>
                    }
                    <div class="form-group">
                        <label>Nome</label>
                        <input value="@toRegister.User.Name" max="40" name="name" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input value="@toRegister.User.Email" max="50" name="email" required type="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Senha</label>
                        <input type="password" min="4" max="16" name="password1" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Confirmação de senha</label>
                        <input type="password" min="4" max="16" name="password2" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Empresa</label>
                        <input value="@toRegister.User.Company" name="company" max="40" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Confirmação</label>

                        @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.White)
                    </div>
                    <input type="submit" value="Confirmar" style="float:right" class="btn btn-success" />
                }
            </div>
        </div>
    </div>
</div>
