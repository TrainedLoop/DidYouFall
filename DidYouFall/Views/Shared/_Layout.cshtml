@using System.Web.Optimization
@using DidYouFall.Models
@using DidYouFall.Models.Repository
@{
    Users LoggedUser = Users.GetLoggedUser();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/Js/Layout")
    @Styles.Render("~/bundles/Css/Layout")
</head>
<body>
    @Html.Partial("_Menu", LoggedUser)
    
    <div id="page-wrapper" style="@(LoggedUser==null?  "margin: 0px 0px 0px 0px;" : "")">
        <br /><br />
        <div class=" row">
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>
    </div>

</body>
</html>








