@using System.Web.Optimization
@using DidYouFall.Models
@using DidYouFall.Models.Repository
@{
    Users LoggedUser = Users.GetLoggedUser();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/Js/Layout")
    @Styles.Render("~/bundles/Css/Layout")
</head>
<body>
    @*//////////////////////////////////////////////////////MENU\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\*@
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink(ProjectConfigs.ProjectName, "Index", "Home", null, new { @class = "navbar-brand", @style = "color:#1B77C5;" })
            <i class="fa fa-leaf fa-fw navbar-brand" style="color:#1B77C5;"></i>
        </div>

        @*////////////////////////////////////USUÁRIO NÃO LOGADO\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\*@
        @if (LoggedUser == null)
        {
            <ul class="nav navbar-top-links navbar-right" style="height: 50px;">
                <li>
                    <a href="~/Users/Register">
                        <div class="col-lg-12">
                            <i class="fa fa-user fa-fw"></i> Cadastre-se
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <div class="col-lg-12">
                            <i class="fa fa-gears fa-fw"></i> Como Funciona
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <div class="col-lg-12">
                            <div class="col-lg-2">Login</div>
                            <div class="col-lg-3">
                                <input class="form-control input-sm" style="height:25px;">
                            </div>
                            <div class="col-lg-2">Senha</div>
                            <div class="col-lg-3">
                                <input type="password" class="form-control input-sm" style="height:25px;">
                            </div>
                            <div class="col-lg-2">
                                <input type="submit" class="btn btn-success btn-sm" style="padding: 2px 5px;">
                            </div>
                        </div>
                    </a>
                </li>
            </ul>
        }
    </nav>
    <div id="page-wrapper" style="@(LoggedUser==null?  "margin: 0px 0px 0px 0px;" : "")">
        <br />
        <br />
        <div class=" row">
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>








